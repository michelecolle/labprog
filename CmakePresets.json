{
  "version": 3,
  "configurePresets": [
    {
      "name": "debug",
      "generator": "Unix Makefiles",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS_DEBUG": "-fsanitize=address -g -fno-omit-frame-pointer"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build",
      "configurePreset": "debug"
    }
  ],
  "testPresets": [],
  "packagePresets": [],
  "workflowPresets": [],
  "launchPresets": [
    {
      "name": "Run with ASan",
      "configurePreset": "debug",
      "target": "memoryleak",
      "environment": {
        "ASAN_OPTIONS": "detect_leaks=1:leak_check_at_exit=1"
      }
    }
  ]
}
