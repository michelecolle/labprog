{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug with AddressSanitizer",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/memoryleak",  // adjust if needed
            "args": [],
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ASAN_OPTIONS",
                    "value": "detect_leaks=1:leak_check_at_exit=1"
                }
            ],
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "stopAtEntry": false,
            "externalConsole": false,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile"   
        }
    ]
}
